{
  "name": "dagoba-graph-db",
  "version": "1.0.0",
  "description": "In-memory graph database with query language.",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "repl": "node repl.js",
    "example:social": "node examples/socialNetwork.js",
    "example:org": "node examples/organizationChart.js",
    "example:deps": "node examples/dependencyGraph.js",
    "example:knowledge": "node examples/knowledgeGraph.js",
    "examples": "npm run example:social && npm run example:org && npm run example:deps && npm run example:knowledge",
    "lint": "eslint src tests examples",
    "lint:fix": "eslint src tests examples --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\" \"examples/**/*.js\"",
    "docs": "jsdoc -c jsdoc.json",
    "build": "echo 'No build step required for this project'"
  },
  "keywords": [
    "graph",
    "database",
    "graph-database",
    "in-memory",
    "query",
    "traversal",
    "lazy-evaluation"
  ],
  "author": "Vyas Giri",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "babel-jest": "^30.2.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.5",
    "prettier": "^3.6.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/dagoba-graph-db.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/dagoba-graph-db/issues"
  },
  "homepage": "https://github.com/yourusername/dagoba-graph-db#readme",
  "directories": {
    "example": "examples",
    "test": "tests"
  }
}
